# Example environment file for Django deployment
# Copy to .env and fill in your values
DJANGO_HOST=yourdomain.com
WEB_USER=www-data
WEB_GROUP=www-data
DJANGO_SITE_DIR=/var/www/django_site
DJANGO_VENV_PATH=/var/www/django_site/venv
DJANGO_CODE_DIR=/var/www/django_site/django_code # Base directory of the code (where git will pull the repository). requirements.txt should be at this level.
DJANGO_APP_DIR=/var/www/django_site/django_code/django_app # where manage.py is located.
DJANGO_SETTINGS_DIR=/var/www/django_site/django_code/django_app/settings  # This is where your app looks for the .env file.
DB_NAME=django_db
DB_USER=django_user
DB_PASSWORD=changeme
GITHUB_REPO=https://github.com/youruser/yourrepo.git
GITHUB_USER=youruser
GITHUB_TOKEN=changeme
LETSENCRYPT_EMAIL=admin@yourdomain.com
GEOIP2_ACCOUNT_ID=123456
GEOIP2_LICENSE_KEY=your_geoip_license_key
GEOIP2_COUNTRY_DB=/usr/share/GeoIP2/GeoLite2-Country.mmdb
GEOIP2_CITY_DB=/usr/share/GeoIP2/GeoLite2-City.mmdb
GEOIP2_MODULE_PATH=/etc/nginx/modules
REDIS_URL=redis://localhost:6379/0
DJANGO_PROJECT_NAME=myproject
UVICORN_PORT=8000
UVICORN_HOST=127.0.0.1
