server {
    listen 80;
    server_name {{ django_host }};
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl http2;
    server_name {{ django_host }};

    ssl_certificate {{ ssl_cert_path }};
    ssl_certificate_key {{ ssl_key_path }};

    # GeoIP2 config
    include /etc/nginx/geoip2.conf;

    # Run as web_user/web_group
    user {{ web_user }} {{ web_group }};

    location /static/ {
        alias {{ django_app_dir }}/static/;
    }
    location /media/ {
        alias {{ django_app_dir }}/media/;
    }
    location / {
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        # Pass GeoIP2 variables to Django via custom headers
        proxy_set_header X-Continent-Code $geoip2_data_continent_code;
        proxy_set_header X-Continent-Name $geoip2_data_continent_name;
        proxy_set_header X-Country-Code $geoip2_data_country_code;
        proxy_set_header X-Country-Name $geoip2_data_country_name;
        proxy_set_header X-Region-Code $geoip2_data_region_code;
        proxy_set_header X-Region-Name $geoip2_data_region_name;
        proxy_set_header X-City-Name $geoip2_data_city_name;
        proxy_set_header X-Latitude $geoip2_data_latitude;
        proxy_set_header X-Longitude $geoip2_data_longitude;
    }
}
